# Escape Sequence
escape ^z^z

# Disable lockscreen
bind x
bind ^x

# Scrollback
defscrollback 3000

# Print command name on status line
shelltitle "$ |bash"

startup_message off
vbell off

# Status line
caption always "%{= wk} %-w%{=b bw}%n %t%{-}%+w"
hardstatus alwayslastline "%H %=[%l] [%Y/%m/%d] "

# enable scrollbar
termcapinfo xterm* ti@:te@

# window re-numbering
# override default `N'(number) mapping
bind n colon 'number '

# $TERM
term xterm-256color
